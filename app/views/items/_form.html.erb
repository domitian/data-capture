
<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :question_title %><br>
    <%= f.text_field :question_title, :placeholder=>"enter title" %>

  </div>
  <div class="field">
    <%= f.label :help_text %><br>
    <%= f.text_area :help_text %>
    
  </div>

  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Question Type <span class="caret"></span>
    </button>

    <ul class="dropdown-menu" role="menu">
      <li> <%= link_to "single line text ",items_path, :id=>'single-line' %></li>
      <li><%= link_to "paragraph text ",items_path, :id => 'paragraph-text' %></li>
      <li><%= link_to "radio button ",items_path, :id => 'radiobutton' %></li>
    </ul>
  </div>

    <div class='hiddenelements'>
      <div id="field-insert1">
        <input type='text' ><br>
      </div>
      <div id="field-insert2"><textarea type='textarea' ></textarea><br></div>

      <div id="field-insert3">
          <input id="item_question_type" name="item[question_type][0]" type="text" class='radios' placeholder="enter option" />

        
        <button type="button" class="btn btn-primary">Add another</button> 
        
      </div>

    </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= javascript_include_tag 'form' %>